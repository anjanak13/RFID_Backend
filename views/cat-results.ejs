<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Race Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/_header') %>

    <div class="container pt-5 my-5">
        <h1 class="text-center mb-5">Race Results for <%= raceName %></h1>

        <% if (categoryStats.length > 0) { %>
            <% categoryStats.forEach(category => { %>
                <div class="mt-5">
                    <h2 class="text-center"><%= category.name %></h2>
                    <p class="text-center">Total Registered: <%= category.totalRegistered %></p>

                    <% if (category.results.length > 0) { %>
                        <table class="table table-striped table-bordered mt-3">
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>Name</th>
                                    <th>Start Time</th>
                                    <th>Finish Time</th>
                                    <th>Total Time</th>
                                    <th>Gap</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% category.results.forEach((result, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= result.name %></td>
                                        <td><%= result.start %></td>
                                        <td><%= result.finish %></td>
                                        <td><%= result.formattedTime %></td>
                                        <td><%= index === 0 ? 'Leader' : result.timeDifference %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <p class="text-center">No results available for this category.</p>
                    <% } %>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-center">No categories found.</p>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
